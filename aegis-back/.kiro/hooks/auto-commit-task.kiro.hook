{
  "enabled": true,
  "name": "Commit After Task",
  "description": "stages all changes using 'git add .' and creates a commit with the content from the last completed task",
  "version": "1",
  "when": {
    "type": "userTriggered"
  },
  "then": {
    "type": "askAgent",
    "prompt": " I want you to use this content from the task to create a commit, stage using 'git add .' and commit"
  },
  "workspaceFolderName": "aegis-back",
  "shortName": "auto-commit-task"
}